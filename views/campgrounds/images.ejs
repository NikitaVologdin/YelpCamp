<%- layout('/layout/boilerplate.ejs') %>
<h1 class="text-center">Edit Images</h1>
<div class="row">
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%=campground._id%>/images"
      method="post"
      enctype="multipart/form-data"
    >
      <label class="form-label mt-3" for="imagesInput">Add Images</label>
      <input
        class="form-control"
        type="file"
        id="imagesInput"
        name="campground[images]"
        multiple
      />
      <div class="buttons flex-wrap mt-2 d-flex"></div>

      <label class="form-label mt-3">Delete Images</label>
      <div class="images d-flex justify-content-between">
        <% for (let image of campground.images) { %>
        <div class="images__image image mt-3">
          <img src="<%=image.thumbnail%>" alt="" />
          <div class="image__handler d-flex justify-content-center">
            <button
              type="button"
              class="btn uploadedImage btn-sm btn-outline-danger mt-1 ms-2"
              name="<%=image.filename%>"
            >
              Delete Image
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                class="bi bi-x-square"
                viewBox="0 0 16 16"
              >
                <path
                  d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"
                ></path>
                <path
                  d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
                ></path>
              </svg>
            </button>
            <input
              type="checkbox"
              class="form__deleteImgContol"
              name="deleteImages[]"
              id=""
              value="<%=image.filename%>"
            />
          </div>
        </div>
        <% } %>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-info mt-5 mx-auto" type="submit">
          Submit Changes
        </button>
      </div>
    </form>
  </div>
</div>

<script src="/scripts/forms/inputImages.js"></script>
<script src="/scripts/forms/uploadedImages.js"></script>
